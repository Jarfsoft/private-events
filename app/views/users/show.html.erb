<p id="notice"><%= notice %></p>
<h2 class="user-profile-header">This is <%= @user.email %>'s profile </h2>

<h3> Past events attended by this user </h3>
  <% @past_events.each do |event| %>
    <%= event.title %>
  <% end %>
<h3> This user created the following events </h3>
  <% @created_events.each do |event| %>
    <%= event.title %>
  <% end %>
<h3> This user is attending the following events</h3>
<% @upcoming_events.each do |event| %>
  <%= event.title %>
<% end %>
</br>
<%= show_edit_user(@user) %> |
<%= link_to 'Back', users_path %>
<%= link_to "Sign out", destroy_user_session_path %>

