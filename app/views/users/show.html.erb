<p id="notice"><%= notice %></p>
<h2 class="user-profile-header">This is <%= @user.email %>'s profile <button type="button" class="btn btn-secondary"><%= show_edit_user(@user) %></button>
<button type="button" class="btn btn-secondary"><%= link_to 'Back', users_path %></button>
<button type="button" class="btn btn-secondary"><%= link_to "Sign out", destroy_user_session_path %></button></h2>

<h3> Past events attended by this user </h3>
  <% @past_events.each do |event| %>
    <%= event.title %>
  <% end %>
<h3> This user created the following events </h3>
  <% @created_events.each do |event| %>
    <%= event.title %>
  <% end %>
<h3> This user is attending the following events</h3>
<% @upcoming_events.each do |event| %>
  <%= event.title %>
<% end %>
</br>


